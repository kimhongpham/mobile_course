<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@android:color/white"
    tools:context=".LoginResult">

<!--    <ImageView-->
<!--        android:id="@+id/ivStatusIcon"-->
<!--        android:layout_width="96dp"-->
<!--        android:layout_height="96dp"-->
<!--        android:src="@drawable/ic_check_circle"-->
<!--        android:tint="#4CAF50"-->
<!--        android:contentDescription="Biểu tượng trạng thái"-->
<!--        android:layout_marginBottom="32dp"/>-->

    <TextView
        android:id="@+id/tvResultTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng Nhập Thành Công!"
        android:textSize="28sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvResultMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chào mừng bạn đến với ứng dụng. Chúng tôi rất vui khi thấy bạn quay lại."
        android:textSize="16sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"/>

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="TIẾP TỤC"
        android:textSize="18sp"
        android:backgroundTint="#6200EE"
        android:textColor="@android:color/white"/>

</LinearLayout>