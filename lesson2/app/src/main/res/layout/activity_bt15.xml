<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="24dp"
        android:gravity="bottom|end"
        android:text="0"
        android:textSize="80sp"
        android:textColor="@android:color/white"
        android:maxLines="1"
        android:ellipsize="start" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="4">

        <Button style="@style/CalculatorButton.Function" android:text="C" android:id="@+id/btnC" />
        <Button style="@style/CalculatorButton.Function" android:text="+/-" android:id="@+id/btnSign" />
        <Button style="@style/CalculatorButton.Function" android:text="%" android:id="@+id/btnPercent" />
        <Button style="@style/CalculatorButton.Operator" android:text="/" android:id="@+id/btnDivide" />

        <Button style="@style/CalculatorButton.Number" android:text="7" android:id="@+id/btn7" />
        <Button style="@style/CalculatorButton.Number" android:text="8" android:id="@+id/btn8" />
        <Button style="@style/CalculatorButton.Number" android:text="9" android:id="@+id/btn9" />
        <Button style="@style/CalculatorButton.Operator" android:text="x" android:id="@+id/btnMultiply" />

        <Button style="@style/CalculatorButton.Number" android:text="4" android:id="@+id/btn4" />
        <Button style="@style/CalculatorButton.Number" android:text="5" android:id="@+id/btn5" />
        <Button style="@style/CalculatorButton.Number" android:text="6" android:id="@+id/btn6" />
        <Button style="@style/CalculatorButton.Operator" android:text="-" android:id="@+id/btnMinus" />

        <Button style="@style/CalculatorButton.Number" android:text="1" android:id="@+id/btn1" />
        <Button style="@style/CalculatorButton.Number" android:text="2" android:id="@+id/btn2" />
        <Button style="@style/CalculatorButton.Number" android:text="3" android:id="@+id/btn3" />
        <Button style="@style/CalculatorButton.Operator" android:text="+" android:id="@+id/btnPlus" />

        <Button style="@style/CalculatorButton.Number" android:text="0" android:id="@+id/btn0" android:layout_columnSpan="2" />
        <Button style="@style/CalculatorButton.Number" android:text="." android:id="@+id/btnDot" />
        <Button style="@style/CalculatorButton.Operator" android:text="=" android:id="@+id/btnEquals" />

    </GridLayout>

</LinearLayout>