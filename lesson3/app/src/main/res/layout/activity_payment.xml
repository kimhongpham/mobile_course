<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".PaymentActivity">

    <!-- Nút thoát -->
    <ImageButton
        android:id="@+id/imgBtnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_exit"
        android:contentDescription="Nút thoát"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Nhóm lựa chọn phương thức thanh toán -->
    <RadioGroup
        android:id="@+id/rgPaymentMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@id/rbBitcoin"
        app:layout_constraintTop_toBottomOf="@id/imgBtnExit"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/rbBitcoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bitcoin"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rbEthereum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ethereum"
            android:textSize="18sp" />
    </RadioGroup>

    <!-- Hiển thị số tiền cần thanh toán -->
    <TextView
        android:id="@+id/tvFeeVND"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số tiền cần thanh toán: ..."
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/rgPaymentMethod" />

    <!-- Hiển thị số tiền quy đổi sang Crypto -->
    <TextView
        android:id="@+id/tvFeeCrypto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quy đổi Bitcoin: ..."
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvFeeVND" />

    <!-- Ảnh minh họa Crypto -->
    <ImageView
        android:id="@+id/ivCryptoImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="32dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@id/tvFeeCrypto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/ic_bitcoin"
        android:contentDescription="Hình ảnh tiền mã hóa" />

    <!-- Nút Thanh toán -->
    <Button
        android:id="@+id/btnPayNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THANH TOÁN"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/ivCryptoImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#2196F3"
        android:textColor="@android:color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>
